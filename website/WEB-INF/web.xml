<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         version="3.1">

    <servlet>
        <servlet-name>SecureImageServlet</servlet-name>
        <servlet-class>SecureImageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SecureImageServlet</servlet-name>
        <url-pattern>/SecureImage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>DisableActionsServlet</servlet-name>
        <servlet-class>DisableActionsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisableActionsServlet</servlet-name>
        <url-pattern>/DisableActions</url-pattern>
    </servlet-mapping>
    
     <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>AuthFilter</filter-class>
	</filter>
	<filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/*</url-pattern>  
    </filter-mapping>
    
  
</web-app>